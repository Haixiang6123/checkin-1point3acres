{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": [
      "jest"
    ]
  },
  "include": [
    "db/user.json",
    "app.ts",
    "db/**/*",
    "lib/**/*",
    "logic/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
